{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "lint": {
    "include": [
      "backend/"
    ],
    "exclude": [
      "backend/drizzle/node_modules",
      "node_modules"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "backend/"
    ],
    "exclude": [
      "backend/drizzle/node_modules",
      "node_modules"
    ]
  },
  "test": {
    "include": [
      "src/"
    ],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts"
    ]
  },
  "tasks": {
    "fmt": "deno fmt **/*.ts",
    "lint": "deno lint **/*.ts",
    "test": "TZ=UTC deno test --no-check --allow-all --env=backend/tests/.env.test --import-map=backend/tests/import_map.json --quiet .",
    "test:coverage": "TZ=UTC deno test --no-check --allow-all --env=backend/tests/.env.test --import-map=backend/tests/import_map.json --coverage=cov_profile --quiet ."
  },
  "importMap": "./import_map.json"
}
