{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "lint": {
    "include": [
      "backend/"
    ],
    "exclude": [
      "backend/drizzle/node_modules",
      "node_modules"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "backend/"
    ],
    "exclude": [
      "backend/drizzle/node_modules",
      "node_modules"
    ]
  },
  "test": {
    "include": [
      "src/"
    ],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts"
    ]
  },
  "tasks": {
    "fmt": "deno fmt **/*.ts",
    "lint": "deno lint **/*.ts"
  },
  "importMap": "./import_map.json"
}
